#!/usr/bin/env tsht

export SHLOG_TERM=debug
plan 2

use shxml
use colordiff

equals_file "$(shxml xslt -p format hocr -p id 'block_1_1' bbox-test.xsl hocr.input.xml)" \
    hocr.expected "fn.bbox hocr"
equals_file "$(shxml xslt -p format alto -p id 'block_1_1' bbox-test.xsl alto.input.xml)" \
    alto.expected "fn.bbox alto"
equals_file "$(shxml xslt -p format abbyy -p id 'block_1_1' bbox-test.xsl abbyy.input.xml)" \
    abbyy.expected "fn.bbox abbyy"
